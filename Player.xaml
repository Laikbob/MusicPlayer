<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayer.Player"
             Title="Halloween Music Player">

    <Grid Padding="20" BackgroundColor="Black">

        <!-- Анимация тыквы -->
        <VerticalStackLayout x:Name="AnimationLayout" HorizontalOptions="Center" VerticalOptions="Center">
            <Image 
                x:Name="PumpkinImage"
                Source="pumpkin1.png"
                HeightRequest="200"
                WidthRequest="200"
                HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Плеер (скрыт пока) -->
        <VerticalStackLayout x:Name="PlayerLayout" Padding="20" Spacing="20"
                             IsVisible="False" VerticalOptions="Center">

            <Label 
                x:Name="SongTitleLabel"
                Text="No song selected"
                FontSize="18"
                TextColor="White"
                HorizontalOptions="Center" />

            <Button
                x:Name="MusicButton"
                Text="Play"
                FontSize="20"
                TextColor="Black"
                BackgroundColor="Orange"
                CornerRadius="30"
                WidthRequest="150"
                HeightRequest="60"
                HorizontalOptions="Center" />

            <Button
                x:Name="PickFileButton"
                Text="Select File"
                FontSize="16"
                TextColor="Black"
                BackgroundColor="DarkOrange"
                CornerRadius="25"
                WidthRequest="150"
                HeightRequest="50"
                HorizontalOptions="Center" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button x:Name="PrevButton" Text="⏮" FontSize="24" BackgroundColor="DarkGray" TextColor="White" WidthRequest="80"/>
                <Button x:Name="NextButton" Text="⏭" FontSize="24" BackgroundColor="DarkGray" TextColor="White" WidthRequest="80"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

    </Grid>
</ContentPage>
